---
// src/pages/index.astro
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Carousel from '@components/Carousel.astro';
import SearchBar from '@components/SearchBar.astro';
import FilterButtons from '@components/FilterButtons.astro';

// ¡OJO! No hace falta la extensión “.tsx” al importar componentes React
import CatalogoGrid from '@components/CatalogoGrid';
---
<Layout class="overflow-x-hidden">
  <Header />

  <Carousel />
  <SearchBar />
  <FilterButtons />

  {/* Este client:load hidrata tu Island de React en el cliente */}
  <CatalogoGrid client:load />

  <Footer />
</Layout>
